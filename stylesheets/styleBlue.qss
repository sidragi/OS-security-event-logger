/* Main window styling */
QMainWindow#mainWindow {
  background-color: #1A2133; /* Darker purple background */
  color: white; /* White text */
}

/* Central widget styling */
QMainWindow#mainWindow > QWidget {
  background-color: #1A2133; /* Darker background */
  color: white; /* White text */
}

/* Button styling */
QPushButton {
  background-color: #516C97; /* Darker light purple */
  color: white; /* White text */
  border-radius: 8px; /* Rounded corners */
  padding: 4px 8px; /* Button padding */
  margin-left: 8px; /* Left margin */
  margin-right: 8px; /* Right margin */
  font-size: 13px; /* Font size */
}

/* Button hover effect */
QPushButton:hover {
  background-color: #2D3C50; /* Darker purple on hover */
}

/* Table widget styling */
QTableWidget {
  background-color: #2D3F61; /* Darker purple background */
  color: white; /* White text */
  border: none; /* Remove default border */
  gridline-color: #475F7A; /* Darker gridline color */
  selection-background-color: #475F7A; /* Darker selected row background */
}

/* Table corner button styling */
QTableWidget::corner {
  background-color: #273A4D; /* Darker background */
  border: none; /* Remove default border */
}

/* Header styling for both vertical and horizontal */
QHeaderView:vertical, QHeaderView:horizontal {
  background-color: #273A4D; /* Darker purple */
  color: white; /* White text */
}

/* Table header section styling */
QHeaderView::section {
  background-color: #273A4D; /* Darker purple */
  color: white; /* White text */
  border: none; /* Remove default borders */
  min-width: 40px; /* Header width */
  font-size: 14px; /* Font size */
  padding: 6px; /* Padding for headers */
}

/* Line Edit widget styling */
QLineEdit {
  background-color: #3F536A; /* Darker muted grayish purple */
  color: white; /* White text */
  border: 1px solid #526A84; /* Darker subtle border */
  border-radius: 6px; /* Rounded corners */
  padding: 4px 8px; /* Padding inside the input */
}

/* Tab widget styling */
QTabWidget {
  background-color: #2D3C50; /* Darker background */
  border: none; /* Remove default border */
}

/* Tab bar styling */
QTabWidget > QTabBar::tab {
  background-color: #283C55; /* Darker tab color */
  color: white; /* White text */
  padding: 8px 15px; /* Padding inside the tab */
  border-top-left-radius: 8px; /* Rounded top-left corner */
  border-top-right-radius: 8px; /* Rounded top-right corner */
}

/* Selected tab styling */
QTabWidget > QTabBar::tab:selected {
  background-color: #32476A; /* Darker highlighted tab color */
}

